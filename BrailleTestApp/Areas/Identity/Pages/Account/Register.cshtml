<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>

<div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p id="title">Sign Up</p>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating">
                <p class="item">First Name</p><input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" id="fname" />
               
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                <p class="item">
                    Last name</p><input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" id="lname" />
               
                <span asp-validation-for="Input.LastName" class="text-danger"></span>

                <p class="item">E-mail</p><input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" id="email" />
              
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <p class="item">Password</p><input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" id="pw" />
               
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <p class="item">Confirm Password</p><input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" id="confpw" />
               
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create account</button>
            <a id="existinglogin"class="existing-user-login" asp-area="" asp-controller="Account" asp-action="Login">Already have an account? Log in</a>
            <p id="last">Or continue with</p>
            <img class="img" src="/css/google.png" alt="Description of image">
            <img class="img" src="/css/linkedin.png" alt="Description of image">
            <img class="img" src="/css/fb.png" alt="Description of image">

        </form>


    </div>
