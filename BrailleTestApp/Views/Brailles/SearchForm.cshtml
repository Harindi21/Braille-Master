                        <option value="Rhombus">Rhombus</option>
                        <option value="Quadrilateral">Quadrilateral</option>
                    </select>
                </div>
                <!-- submit button-->
                <div class="form-group" id="EnterDiv"><br/>
                        <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

