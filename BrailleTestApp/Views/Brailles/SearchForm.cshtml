    <h1>Generate Braille</h1>

    <div class="row1">
        <h5>For Shapes</h5>
        <div class="col-md-4">
            <form asp-action="SearchResult">
                <!-- action-->
                <div class="form-group">
                    <select size="1" class="form-control" name="ShapeList" id="myDropDownList1" onchange="showHideFields()">
