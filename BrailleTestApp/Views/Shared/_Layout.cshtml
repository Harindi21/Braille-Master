<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BrailleTestApp</title>
        <!--montserrat-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@700&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        .nav-link 
        {
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            margin-top: 26px;
            margin-right: 40px;
            margin-left: 40px;
            font-size: 20px;
            padding:0px;
        }
        ul.circles li 
        {
            display: inline;
            padding-right: 16px;
        }
        .circles
        {
            margin-left:32px;
            margin-top: -12px;
        }
        .pic
        {
            margin-left: 1188px;
        }
        .container, .container a
        {
            text-decoration:none;
            color: #434346;
        }
        #nav1, #nav2, #nav3, #nav4{
            color:white;
        }

        #nav1:hover{
            color: #FC587E;
        }

        #nav2:hover {
            color: #FC587E;
        }

        #nav3:hover {
            color: #FC587E;
        }
        #nav4:hover{
            color: #FC587E;
        }
       
       

    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrailleTestApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a id="nav1" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!-- Perimeter-->

                        <li class="nav-item">
                            <a id="nav2" class="nav-link" asp-area="" asp-controller="Brailles" asp-action="SearchPerimeter">Perimeter</a>
                        </li>

                        <!-- Search for Braille-->

                        <li class="nav-item">
                            <a id="nav3" class="nav-link" asp-area="" asp-controller="Brailles" asp-action="SearchForm">Braille</a>
                        </li>

                        <!-- FAQs -->

                        <li class="nav-item">
                            <a id="nav4" class="nav-link" asp-area="" asp-controller="Home" asp-action="Faqs">FAQs</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div >
        <ul class="circles">
            <li><img src="~/Images/white.png" width="28px"></li>
            <li><img src="~/Images/whbite.png" width="28px" /></li>
            <li><img src="~/Images/Jwhite.png" width="28px"></li>
            @*<li class="pic"><img src="~/Images/user(1).png" width="28px"></li>*@
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   @* <footer class="footer text-muted">
        <div class="container">
            &copy; 2023 - Braille Master - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
